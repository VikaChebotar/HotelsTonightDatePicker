<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_date_picker_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_horizontal_margin"
        android:paddingLeft="@dimen/item_side_margin"
        android:paddingRight="@dimen/item_side_margin"
        android:paddingTop="@dimen/item_horizontal_margin">

        <TextView
            android:id="@+id/dayOfTheMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_of_month_text_color"
            android:textSize="@dimen/day_of_month_text_size" />

        <TextView
            android:id="@+id/dayOfTheWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/day_of_week_text_color"
            android:textSize="@dimen/day_of_week_text_size" />
    </LinearLayout>
</RelativeLayout>