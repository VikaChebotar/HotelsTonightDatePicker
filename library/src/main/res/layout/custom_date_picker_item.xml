<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_date_picker_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/dayOfTheMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/date_picker_textcolor_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dayOfTheWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mo"
            android:textAllCaps="true"
            android:textColor="@color/date_picker_textcolor_secondary"
            android:textSize="9sp" />
    </LinearLayout>
</LinearLayout>